{
  "containers": {
    "app": {
      "image": "",
      "environment": {
        "APP_ENV": "release",
        "NODE_ENV": "production"
      },
      "ports": {
        "3001": "HTTP"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "app",
    "containerPort": 3000,
    "healthCheck": {
      "healthyThreshold": 2,
      "unhealthyThreshold": 2,
      "timeoutSeconds": 5,
      "intervalSeconds": 10,
      "path": "/health",
      "successCodes": "200-299"
    }
  }
}
